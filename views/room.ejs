<!DOCTYPE html>
<html lang="en">
    <head>
        <title>WebRTC</title>
        <script src="https://cdn.socket.io/4.5.0/socket.io.min.js" integrity="sha384-7EyYLQZgWBi67fBtVxw60/OWl1kjsfrPFcaU0pp0nAh+i8FD068QogUvg85Ewy1k" crossorigin="anonymous"></script>
        <script src="https://unpkg.com/peerjs@1.3.2/dist/peerjs.min.js"></script>
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    </head>
    <body>
        <div id="video-call">
            <h3 id="my-peer">ID: </h3>
        
            <p>Online User:</p>
            <ul id="userList">  </ul>

            <video id="localStream" width="300" controls muted="true"></video>
            <br /><br />
            <video id="remoteStream" width="300" controls></video>
            <br /><br />
            <input type="text" id="remoteID" placeholder="Gọi cho ai">
            <button id="btnCall">Gọi</button>
            <br /><br />
        </div>
        
        <div id="sign-in">
            <input type="text" id="username" placeholder="Nhập username">
            <button id="btnSignUp">Đăng kí</button>
        </div>
    </body>
    <script src="script.js"></script>
</html>
